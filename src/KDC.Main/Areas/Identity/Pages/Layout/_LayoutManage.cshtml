@inject SignInManager<ApplicationUser> SignInManager
@inject IHtmlLocalizer<Shared> SharedLocalizer
@inject IHtmlLocalizer<Authentication> AuthenticationLocalizer
@inject IHtmlLocalizer<ProfileManagement> ProfileManagementLocalizer

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">

<partial name="_GlobalHeaderPartial" />

<body>

    <div class="antialiased">
        <partial name="_NavBarWithSideNavPartial" />

        <!-- Sidebar -->

        <aside class="sidenav" aria-label="Sidenav" id="drawer-navigation">
            <div class="sidenav__items__container">
                <ul class="space-y-2">
                    <li class="sidenav__item">
                        <a id="profile" asp-page="./Index" class="sidenav__link group">
                            <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                person
                            </span>
                            <span class="sidenav__link__label">@SharedLocalizer["Profile"]</span>
                        </a>
                    </li>
                    <li class="sidenav__item">
                        <a id="change-password" asp-page="./ChangePassword" class="sidenav__link group">
                            <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                key
                            </span>
                            <span class="sidenav__link__label">@SharedLocalizer["Password"]</span>
                        </a>
                    </li>

                    @if (hasExternalLogins)
                    {
                        <li class="sidenav__item">
                            <a id="external-logins" asp-page="./ExternalLogins" class="sidenav__link group">
                                <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                    vpn_lock
                                </span>
                                <span class="sidenav__link__label">@AuthenticationLocalizer["External logins"]</span>
                            </a>
                        </li>
                    }
                    <li class="sidenav__item">
                        <a id="two-factor" asp-page="./TwoFactorAuthentication" class="sidenav__link group">
                            <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                phonelink_lock
                            </span>
                            <span class="sidenav__link__label">@AuthenticationLocalizer["Two-factor authentication"]</span>
                        </a>
                    </li>

                    <li class="sidenav__item">
                        <a id="personal-data" asp-page="./PersonalData" class="sidenav__link group">
                            <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                Gavel
                            </span>
                            <span class="sidenav__link__label">@ProfileManagementLocalizer["Personal data"]</span>
                        </a>
                    </li>
                </ul>

                <ul class="sidenav__section">
                    <li class="sidenav_item">
                        <a href="#" class="sidenav__link group">
                            <span aria-hidden="true" class="material-symbols-outlined sidenav__link__icon">
                                help
                            </span>
                            <span class="sidenav__link__label">@SharedLocalizer["Contact us"]</span>
                        </a>
                    </li>
                </ul>

            </div>

            <partial name="_SideNavCopyrightPartial" />

        </aside>

        <main class="p-4 md:ml-64 h-auto pt-20 text-black dark:text-white">
            @RenderBody()
        </main>
    </div>

    <partial name="_GlobalScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>